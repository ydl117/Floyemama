<h2 class="mt-5">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <br />
    <%= f.text_field :pseudo, autofocus: true, class:"form-control", placeholder:"Pseudo (25 caractères max.)" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.label :level %><br />
    <%= f.select :level, [["Casual", "Casual"], ["Regular", "Regular"], ["Hardcore", "Hardcore"]], {}, class:"form-select" %>
  </div>

  <br />
  <div class="text-center">Plateforme(s)</div>
  <div class="d-flex justify-content-around">
    <div class="field form-group">
      <%= f.label :Nintendo %><br />
      <%= f.check_box :nintendo, value: "1", class:"form-check-input"  %>
    </div>

    <div class="field form-group">
      <%= f.label :Sony %><br />
      <%= f.check_box :sony, value: "1", class:"form-check-input"  %>
    </div>

    <div class="field form-group">
      <%= f.label :XBox %><br />
      <%= f.check_box :xbox, value: "1", class:"form-check-input"  %>
    </div>

    <div class="field form-group">
      <%= f.label :Pc %><br />
      <%= f.check_box :pc, value: "1", class:"form-check-input"  %>
    </div>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mot de passe (6 caractères minimum.)" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmation du mot de passe" %>
  </div><br />

  <div class="field form-group">
    <%= f.text_area :description, size: "70x5", class:"form-control", placeholder:"Phrase d'accroche!" %>
  </div>

  <div class="actions">
    <br />
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
